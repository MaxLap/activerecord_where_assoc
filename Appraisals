appraise "rails_4_2" do
  gem "activerecord", "~> 4.2.0"
end

appraise "rails_5_0" do
  gem "activerecord", "~> 5.0.0"
end

appraise "rails_5_1" do
  gem "activerecord", "~> 5.1.0"
end

